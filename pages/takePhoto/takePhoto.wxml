
<view style='width:{{width}}px; height:{{height}}px; overflow:hidden;'>
  <camera device - position="back" flash = "off" style="width: 100%; height:100vh;">
   <cover-view class="camerabgImage-view">
      <cover-view class='cameratop-view1'>请确保取证对象在虚线框范围内</cover-view>
      <cover-view class='cameratop-view2'>
          <cover-view class='cameratop-view2-detail'>{{currentTime}}</cover-view>
          <cover-view class='cameratop-view2-detail'>经度：{{gps.longitude}} 纬度：{{gps.latitude}}</cover-view>
          <cover-view class='cameratop-view2-detail'> {{district}}附近</cover-view>
      </cover-view>
      <cover-view class="camerabotton-view" >
        <cover-image src='{{logo}}' class= 'takephoto' bindtap='takePhoto'> </cover-image>
      </cover-view>
   </cover-view>
     <!--上部线条 -->
    <cover-view class= 'biaochi' style = 'top:{{gap}}px; left:30px; width:{{width-30*2}}px; height:2px;'> </cover-view>
    <!--下部线条 -->
    <cover-view class= 'biaochi' style = 'top:{{gap+460}}px; left:30px; width:{{width-30*2}}px; height:2px;'> </cover-view>
     <!--右部线条 -->
    <cover-view class= 'biaochi' style = 'top:{{gap}}px; right:30px; width:2px; height:460px;'> </cover-view>
    <!--左部线条 -->
    <cover-view class= 'biaochi' style = 'top:{{gap}}px; left:30px; width:2px; height:460px;'> </cover-view>
  </camera>
</view> 

